@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuizModel

@{
    ViewData["Title"] = "Quiz Create";
    var questions = ViewBag.Questions as List<DidUFall4It_DDACGroupAssignment_Group21.Models.Question>;
}

<h1>Create Quiz</h1>

<form asp-controller="QuizMaker" asp-action="QuizCreate" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Quiz Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Quiz</button>
    <a asp-controller="QuizMaker" asp-action="QuizHome" class="btn btn-secondary">Back</a>
    <a asp-controller="QuizMaker" asp-action="QuestionCreate" class="btn btn-outline-success">Add New Question</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
