@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuestionEdit

@{
    ViewData["Title"] = "Edit Question";
}

<h1>Edit Question</h1>

<!-- Select Question -->
<form asp-controller="QuizMaker" asp-action="QuestionEdit" method="get" class="mb-4">
    <div class="mb-3">
        <label for="SelectedQuestionId" class="form-label">Select Question to Edit</label>
        <select id="SelectedQuestionId" name="SelectedQuestionId" class="form-select" onchange="this.form.submit()">
            <option value="">-- Select Question --</option>
            @foreach (var question in Model.Questions)
            {
                <option value="@question.QuestionId" selected="@(Model.SelectedQuestion != null && question.QuestionId == Model.SelectedQuestion.QuestionId)">
                    @question.QuestionText
                </option>
            }
        </select>
    </div>
</form>

@if (Model.SelectedQuestion != null)
{
    <form asp-controller="QuizMaker" asp-action="QuestionEdit" method="post">
        <input type="hidden" name="QuestionId" value="@Model.SelectedQuestion.QuestionId" />

        <div class="mb-3">
            <label class="form-label">Question Text</label>
            <input name="QuestionText" class="form-control" value="@Model.SelectedQuestion.QuestionText" />
        </div>
        <div class="mb-3">
            <label class="form-label">Option One</label>
            <input name="OptionOne" class="form-control" value="@Model.SelectedQuestion.OptionOne" />
        </div>
        <div class="mb-3">
            <label class="form-label">Option Two</label>
            <input name="OptionTwo" class="form-control" value="@Model.SelectedQuestion.OptionTwo" />
        </div>
        <div class="mb-3">
            <label class="form-label">Option Three</label>
            <input name="OptionThree" class="form-control" value="@Model.SelectedQuestion.OptionThree" />
        </div>
        <div class="mb-3">
            <label class="form-label">Option Four</label>
            <input name="OptionFour" class="form-control" value="@Model.SelectedQuestion.OptionFour" />
        </div>
        <div class="mb-3">
            <label class="form-label">Correct Answer (index, starting from 0)</label>
            <input name="Answer" type="number" class="form-control" min="0" max="3" value="@Model.SelectedQuestion.Answer" />
        </div>
        <div class="mb-3">
            <label class="form-label">Score</label>
            <input name="Score" type="number" class="form-control" min="0" value="@Model.SelectedQuestion.Score" />
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-controller="QuizMaker" asp-action="QuizEdit" class="btn btn-secondary">Back to Quiz Edit</a>
    </form>
    <form asp-controller="QuizMaker" asp-action="DeleteQuestion" method="post" class="mt-3">
        <input type="hidden" name="QuestionId" value="@Model.SelectedQuestion.QuestionId" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this question?');">Delete Question</button>
    </form>
}
else
{
    <div class="alert alert-info">Please select a question to edit.</div>
}