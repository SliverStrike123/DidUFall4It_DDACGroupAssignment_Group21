@model DidUFall4It_DDACGroupAssignment_Group21.Models.Question

@{
    ViewData["Title"] = "Create Question";
    var quizzes = ViewBag.Quizzes as List<DidUFall4It_DDACGroupAssignment_Group21.Models.QuizModel>;
}

<h1>Create Question</h1>

<form asp-controller="QuizMaker" asp-action="QuestionCreate" method="post">
    <div class="mb-3">
        <label asp-for="QuestionId" class="form-label">Question ID</label>
        <input asp-for="QuestionId" class="form-control" />
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question Text</label>
        <input asp-for="QuestionText" class="form-control" />
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OptionOne" class="form-label">Option 1</label>
        <input asp-for="OptionOne" class="form-control" />
        <span asp-validation-for="OptionOne" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OptionTwo" class="form-label">Option 2</label>
        <input asp-for="OptionTwo" class="form-control" />
        <span asp-validation-for="OptionTwo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OptionThree" class="form-label">Option 3</label>
        <input asp-for="OptionThree" class="form-control" />
        <span asp-validation-for="OptionThree" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OptionFour" class="form-label">Option 4</label>
        <input asp-for="OptionFour" class="form-control" />
        <span asp-validation-for="OptionFour" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Answer" class="form-label">Correct Answer (index from 0)</label>
        <select asp-for="Answer" class="form-select">
            <option value="0">Option 1</option>
            <option value="1">Option 2</option>
            <option value="2">Option 3</option>
            <option value="3">Option 4</option>
        </select>
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Score" class="form-label">Score</label>
        <input asp-for="Score" type="number" class="form-control" min="0" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Assign to Quiz (optional)</label>
        <select name="SelectedQuizId" class="form-select">
            <option value="">-- Do not assign --</option>
            @if (quizzes != null)
            {
                foreach (var quiz in quizzes)
                {
                    <option value="@quiz.QuizModelId">@quiz.Title</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Question</button>
    <a asp-controller="QuizMaker" asp-action="QuizCreate" class="btn btn-secondary">Back to Quiz Create</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}