@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuizReview

@{
    ViewData["Title"] = "Edit Insight";
}

<h1>Edit Insight</h1>

<form asp-controller="QuizMaker" asp-action="InsightEdit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuizReviewId" />

    <div class="mb-3">
        <label class="form-label">Quiz ID</label>
        <input asp-for="QuizId" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Tag</label>
        <input asp-for="Tag" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Average Score</label>
        <input asp-for="AverageScore" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Highest Score</label>
        <input asp-for="HighestScore" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Lowest Score</label>
        <input asp-for="LowestScore" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Informative Ratings</label>
        <input class="form-control" value="@string.Join(", ", Model.InformativeRatings ?? new List<int>())" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Engagement Ratings</label>
        <input class="form-control" value="@string.Join(", ", Model.EngagementRatings ?? new List<int>())" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Comments</label>
        <textarea class="form-control" rows="3" readonly>@string.Join("\n", Model.Comments ?? new List<string>())</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<form asp-controller="QuizMaker" asp-action="DeleteInsight" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="QuizReviewId" value="@Model.QuizReviewId" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this insight?');">Delete Insight</button>
</form>

<div class="mt-4">
    <a asp-controller="QuizMaker" asp-action="InsightList" class="btn btn-secondary">Back to Insight List</a>
    <a asp-controller="QuizMaker" asp-action="InsightHome" class="btn btn-outline-secondary">Back to Insight Home</a>
</div>