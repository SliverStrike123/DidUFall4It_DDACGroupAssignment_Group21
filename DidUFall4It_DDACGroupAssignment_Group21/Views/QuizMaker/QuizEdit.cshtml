@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuizEdit

@{
    ViewData["Title"] = "Quiz Edit";
}

<h1>Edit Quiz</h1>

<!-- Quiz selection form -->
<form asp-controller="QuizMaker" asp-action="QuizEdit" method="get" class="mb-4">
    <div class="mb-3">
        <label for="SelectedQuizId" class="form-label">Select Quiz to Edit</label>
        <select id="SelectedQuizId" name="SelectedQuizId" class="form-select" onchange="this.form.submit()">
            <option value="">-- Select Quiz --</option>
            @foreach (var quiz in Model.Quizzes)
            {
                <option value="@quiz.QuizModelId" selected="@(quiz.QuizModelId == Model.SelectedQuiz?.QuizModelId)">
                    @quiz.Title
                </option>
            }
        </select>
    </div>
</form>

@if (Model.SelectedQuiz != null)
{
    <form asp-controller="QuizMaker" asp-action="QuizEdit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="QuizModelId" value="@Model.SelectedQuiz.QuizModelId" />

        <div class="mb-3">
            <label class="form-label">Quiz Title</label>
            <input name="Title" class="form-control" value="@Model.SelectedQuiz.Title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Assign Questions</label>
            <div>
                @foreach (var question in Model.AllQuestions)
                {
                    var isChecked = Model.SelectedQuiz.QuestionIds.Any(q => q.QuestionId == question.QuestionId);
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="QuestionIds"
                               value="@question.QuestionId"
                               id="q_@question.QuestionId"
                               @(isChecked ? "checked" : "") />
                        <label class="form-check-label" for="q_@question.QuestionId">
                            @question.QuestionText
                        </label>
                    </div>
                }
            </div>
            <div class="form-text">Check or uncheck questions to assign or remove them from this quiz.</div>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
    <form asp-controller="QuizMaker" asp-action="DeleteQuiz" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="QuizModelId" value="@Model.SelectedQuiz.QuizModelId" />
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this quiz? This action cannot be undone.');">
            Delete Quiz
        </button>
    </form>
}
else
{
    <div class="alert alert-info">Please select a quiz to edit.</div>
}

<!-- Navigation buttons always visible -->
<div class="mt-4">
    <a asp-controller="QuizMaker" asp-action="QuizHome" class="btn btn-secondary">Back</a>
    <a asp-controller="QuizMaker" asp-action="QuestionEdit" class="btn btn-outline-success">Edit Questions</a>
</div>