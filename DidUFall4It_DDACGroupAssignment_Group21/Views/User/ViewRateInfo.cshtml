@model DidUFall4It_DDACGroupAssignment_Group21.Models.InfographicFeedback
@{
    ViewData["Title"] = "Rate Infographic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white fs-4 rounded-top-4">
            <i class="bi bi-star-half"></i> Rate Infographic
        </div>
        <div class="card-body">
            <form asp-action="Rate" method="post">
                <input type="hidden" asp-for="InfographicId" />

                @foreach (var section in new[] { "Informative", "Engagement", "Clarity", "Relevance" })
                {
                    var color = section switch
                    {
                        "Informative" => "primary",
                        "Engagement" => "success",
                        "Clarity" => "warning",
                        "Relevance" => "danger",
                        _ => "secondary"
                    };
                    <div class="mb-3">
                        <label class="form-label d-block">@(@section)</label>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <label class="btn btn-outline-@color me-1">
                                <input type="radio" name="@($"{section}Rating")" value="@i" autocomplete="off" required />
                                @i
                            </label>
                        }
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Comment (optional)</label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="InfoViewAll" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to All Infographics
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Submit Rating
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>