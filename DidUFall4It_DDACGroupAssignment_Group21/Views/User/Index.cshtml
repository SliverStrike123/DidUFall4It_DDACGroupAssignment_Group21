@{
    ViewData["Title"] = "General User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark display-5">🎯 Welcome to Your Learning Dashboard</h1>
        <p class="lead text-muted">Enhance your awareness, track your growth, and interact with insightful scam prevention tools.</p>
    </div>

    <div class="row g-4">

        <!-- Feature 1: Scam Quiz Interaction -->
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-header bg-gradient bg-primary text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Scam Quiz Interaction</h5>
                </div>
                <div class="card-body">
                    <p>Attempt scam awareness quizzes and manage your quiz history for better scam detection.</p>
                    <a asp-controller="User" asp-action="QuizViewUser" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-play-circle"></i> Take a Quiz
                    </a>
                    <a asp-controller="User" asp-action="QuizHistory" class="btn btn-outline-primary w-100">
                        <i class="bi bi-clock-history"></i> View Quiz History
                    </a>
                </div>
            </div>
        </div>

        <!-- Feature 2: Infographic Engagement -->
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-header bg-gradient bg-secondary text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-image-alt"></i> Infographic Engagement</h5>
                </div>
                <div class="card-body">
                    <p>Browse scam-related infographics, and leave comments to share insights and feedback.</p>
                    <a asp-controller="User" asp-action="InfoViewAll" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-images"></i> View Infographics
                    </a>
                    <a asp-controller="User" asp-action="InfoMyFeedback" class="btn btn-outline-primary w-100">
                        <i class="bi bi-chat-dots"></i> My Feedback
                    </a>
                </div>
            </div>
        </div>

        <!-- Feature 3: Personal Progress Tracking -->
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-header bg-gradient bg-success text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-graph-up-arrow"></i> Personal Progress Tracking</h5>
                </div>
                <div class="card-body">
                    <p>Set personal learning goals and track your progress throughout your scam education journey.</p>
                    <a asp-controller="Progress" asp-action="Create" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-plus-circle"></i> Set Learning Goal
                    </a>
                    <a asp-controller="Progress" asp-action="List" class="btn btn-outline-primary w-100">
                        <i class="bi bi-list-task"></i> View Progress
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
