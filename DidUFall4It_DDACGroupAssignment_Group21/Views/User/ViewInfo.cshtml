@model DidUFall4It_DDACGroupAssignment_Group21.Models.InfographicModel
@{
    ViewData["Title"] = "Infographic Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white fs-4 rounded-top-4">
            <i class="bi bi-file-earmark-text"></i> @Model.Title
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.Tips))
            {
                <div class="mb-3">
                    <h5>Tips</h5>
                    <p>@Model.Tips</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-3">
                    <img src="@Model.ImagePath" alt="Infographic Image" class="img-fluid rounded shadow" />
                </div>
            }

            <p class="text-muted small">Posted on: @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>

            <a asp-controller="User" asp-action="InfoViewAll" class="btn btn-outline-info mt-3">
                <i class="bi bi-arrow-left"></i> Back to All Infographics
            </a>
        </div>
    </div>
</div>