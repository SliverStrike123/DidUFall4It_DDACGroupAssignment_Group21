@model List<DidUFall4It_DDACGroupAssignment_Group21.Models.InfographicFeedback>
@{
    ViewData["Title"] = "My Feedbacks";
}

<h2>My Feedbacks</h2>

@if (!Model.Any())
{
    <p>You haven't submitted any feedback yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Infographic</th>
                <th>Informative</th>
                <th>Engagement</th>
                <th>Clarity</th>
                <th>Relevance</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.InfographicTitle ?? "Unknown")</td> 
                    <td>@item.InformativeRating</td>
                    <td>@item.EngagementRating</td>
                    <td>@item.ClarityRating</td>
                    <td>@item.RelevanceRating</td>
                    <td>@item.Comment</td>
                    <td>@item.PostedAt.ToString("g")</td>
                    <td>
                        <a asp-action="InfoEditFeedbackView" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="DeleteFeedback" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}