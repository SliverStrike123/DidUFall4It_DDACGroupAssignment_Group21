@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuizViewModel
@{
    ViewData["Title"] = "Available Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white fs-4 rounded-top-4">
            <i class="bi bi-clipboard-check"></i> Available Quizzes
        </div>
        <div class="card-body">
            @if (Model.Quizzes != null && Model.Quizzes.Any())
            {
                <ul class="list-group mb-4">
                    @foreach (var quiz in Model.Quizzes)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">@quiz.Title</span>
                            @if (quiz.hasAttempted)
                            {
                                <span class="badge bg-secondary">Attempted</span>
                            }
                            else
                            {
                                <a asp-controller="User"
                                   asp-action="QuestionViewUser"
                                   asp-route-quizModelId="@quiz.QuizModelId"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Attempt Questions
                                </a>
                            }
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-info">No quizzes are currently available.</div>
            }

            <a asp-controller="User" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>
