@model DidUFall4It_DDACGroupAssignment_Group21.Models.QuizViewModel

@{
    ViewData["Title"] = "Available Quizzes";
}

<h1>Available Quizzes</h1>

@if (Model.Quizzes != null && Model.Quizzes.Any())
{
    <ul class="list-group">
        @foreach (var quiz in Model.Quizzes)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@quiz.Title</span>
                <a asp-controller="User"
                   asp-action="QuestionViewUser"
                   asp-route-quizModelId="@quiz.QuizModelId"
                   class="btn btn-primary btn-sm">
                    View Questions
                </a>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-3">No quizzes are currently available.</div>
}