@{
    ViewData["Title"] = "Welcome to DidUFall4It.com";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="display-4 fw-bold mb-4 text-primary">DidUFall4It.com</h1>
            <p class="lead mb-4">
                A scam awareness platform helping users identify, report, and avoid scams online.<br />
                Take interactive quizzes, explore helpful infographics, and contribute to a growing community determined to stop online fraud.
            </p>

            <div class="d-flex justify-content-center gap-3 mb-5">
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
                <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="p-4 border rounded shadow-sm h-100">
                        <h5 class="mb-3">
                            <i class="bi bi-ui-checks-grid text-success"></i> Take Scam Awareness Quizzes
                        </h5>
                        <p>
                            Test your scam-spotting skills with interactive quizzes and improve your fraud detection abilities.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 border rounded shadow-sm h-100">
                        <h5 class="mb-3">
                            <i class="bi bi-easel2 text-warning"></i> Explore Infographics
                        </h5>
                        <p>
                            Visual guides and real-world examples to help you recognize and avoid common scams.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 border rounded shadow-sm h-100">
                        <h5 class="mb-3">
                            <i class="bi bi-pencil-square text-info"></i> Contribute Quizzes & Infographics
                        </h5>
                        <p>
                            Help others by submitting your own quizzes or infographics based on scams you've encountered.<br />
                            Join our quiz-making or infographic team!
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>