@model DidUFall4It_DDACGroupAssignment_Group21.Models.InfographicModel
@{
    ViewData["Title"] = "InfoCreate";
}

<h1>InfoCreate</h1>

<h2>Create Infographic</h2>

<form asp-action="InfoCreate" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tips">Tips (optional)</label>
        <input asp-for="Tips" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ImageFile">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Infographic" class="btn btn-secondary">Back</a>
</form>