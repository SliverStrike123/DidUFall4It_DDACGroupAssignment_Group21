
@{
    ViewData["Title"] = "InfoHome";
}

<h1>InfoHome</h1>

<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-4">Infographic Main Menu</h2>
        <div class="d-grid gap-3 col-6 mx-auto">
            <a asp-controller="Infographic" asp-action="InfoCreate" class="btn btn-success btn-lg">Create Infographic</a>
            <a asp-controller="Infographic" asp-action="InfoList" class="btn btn-secondary btn-lg">View Created Infographics</a>
            <a asp-controller="Infographic" asp-action="Index" class="btn btn-outline-secondary btn-lg">Back</a>
        </div>
    </div>
</div>